<resources xmlns:tools="http://schemas.android.com/tools">
    <!--светлая тема-->
    <style name="Base.Theme.SpaceLight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">#E3D2DB</item>
        <item name="chipStyle">@style/myChipStyleLight</item>
        <item name="materialButtonStyle">@style/myButtonStyleLight</item>

    </style>

    <style name="myChipStyleLight" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/my_selector_background_chip_light</item>
        <item name="rippleColor">#6E5160</item>
        <item name="backgroundColor">#464451</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="myButtonStyleLight" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/my_selector_background_button_light</item>
    </style>



    <!--Темная тема-->

    <style name="Base.Theme.SpaceDark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="chipStyle">@style/myChipStyle</item>
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:windowBackground">#6E5160</item>

    </style>


    <style name="myChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/my_selector_background_chip_dark</item>
        <item name="rippleColor">#6E5160</item>
        <item name="backgroundColor">#464451</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="myButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/my_selector_background_button_dark</item>
    </style>




</resources>